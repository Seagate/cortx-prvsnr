{% if 'data0' in grains['ip4_interfaces'] and grains['ip4_interfaces']['data0'] -%}
  {%- set data_if = 'data0' -%}
{%- else %}
  {%- set data_if = pillar['cluster']['srvnode_1']['network']['data']['interfaces'][1] -%}
{%- endif -%}
left-interface: {{ data_if }}

{%- if 'data0' in grains['ip4_interfaces'] and grains['ip4_interfaces']['data0'] %}
  {%- set data_if = 'data0' %}
{%- else %}
  {%- set data_if = pillar['cluster']['srvnode_2']['network']['data']['interfaces'][1] %}
{%- endif %}
right-interface: {{ data_if }}

{%- if salt['cmd.run']('lspci -d"15b3:*"') %}
net-type: o2ib
{%- else %}
net-type: tcp
{%- endif %}
ip1: {{ pillar['cluster']['srvnode_1']['network']['data']['roaming_ip'] }}
ip2: {{ pillar['cluster']['srvnode_2']['network']['data']['roaming_ip'] }}
left-node: srvnode_1
right-node: srvnode_2
left-volume: {{ pillar['cluster']['srvnode_1']['storage']['metadata_devices'][0] }}1
right-volume: {{ pillar['cluster']['srvnode_2']['storage']['metadata_devices'][0] }}1
skip-mkfs: true
