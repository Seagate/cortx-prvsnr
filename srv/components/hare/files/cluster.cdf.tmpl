{% if 'data0' in grains['ip4_interfaces'] and grains['ip4_interfaces']['data0'] %}
  {%- set data_if = 'data0' -%}
{% else %}
  {%- set data_if = pillar['cluster'][grains['id']]['network']['data_nw']['iface'][1] -%}
{%- endif -%}
nodes:
{% for node in pillar['cluster']['node_list'] %}
  - hostname: {{ node }}
    data_iface: {{ data_if }}
{%- if salt['cmd.run']('lspci -d"15b3:1017:0200"') %}
    data_iface_type: o2ib
{%- else %}
    data_iface_type: tcp
{%- endif %}
    m0_servers:
      - runs_confd: true
        io_disks:
          data: []
      - io_disks:
          be_seg: /dev/vg_metadata_{{ node }}/lv_raw_metadata
          data:
          {%- for dev in pillar['cluster'][node]['storage']['data_devices'] %}
            - {{ dev }}
          {%- endfor %}

    m0_clients:
{%- if "physical" in grains['virtual'] %}
      s3: {{ pillar['s3server']['no_of_inst'] }}
{%- else %}
      s3: 1
{%- endif %}
{%- if "physical" in grains['virtual'] %}
      other: 3
{%- else %}
      other: 1
{%- endif %}
{%- endfor %}
pools:
  - name: the pool
    disks: all
    data_units: 1
    parity_units: 0
