{% if 'eth0' in grains['ip4_interfaces'] and grains['ip4_interfaces']['eth0'] %}
  {%- set mgmt_if = 'eth0' -%}
{% else %}
  {%- set mgmt_if = pillar['cluster'][grains['id']]['network']['mgmt_nw']['iface'][0] -%}
{%- endif -%}
interface: {{ mgmt_if }}
vip: {{ pillar['cluster']['mgmt_vip'] }}
{% set netmask = pillar['cluster'][grains['id']]['network']['mgmt_nw']['netmask'] %}
{% set cidr = salt['network.calc_net'](pillar['cluster']['mgmt_vip'], netmask)).split("/")[1] %}
cidr: {{ cidr }}
left-node: srvnode-1
right-node: srvnode-2
