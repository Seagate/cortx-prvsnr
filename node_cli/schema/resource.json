{
    "name": "resource",
    "description": "health and manifest commands",
    "sub_commands": [
        {
            "name": "show",
            "description": "reshource show health and manifest command",
            "permissions_tag": "bypass",
            "args": [
            {
                "flag": "--health",
                "type": "str",
                "help": "Health check for all the resources in the system"
            },
            {
                "flag": "--manifest",
                "type": "str",
                "help": "discover HW/SW Manifest for all resources"
            },
            {
                "flag": "--resource_type",
                "type": "str",
                "help": "Resource type for which resource map is to be fetched e.g 'node>compute[0]>hw>disks' or 'node>compute[0]' or 'node>storage[0]>hw>controllers'"
            },
            {
                "flag": "--resource_state",
                "type": "str",
                "help": "The current state of the resources  like 'OK', 'FAULT', 'DEGRADED', 'NA', 'INACTIVE', 'UNKNOWN'"
            },
            {
                "flag": "args",
                "default": [],
                "suppress_help": true,
                "nargs": "?",
                "help": ""
            },
            {
                "flag": "-f",
                "dest": "format",
                "help": "Format of Output",
                "default": "json",
                "type": "str",
                "choices": [
                "table",
                "xml",
                "json"
                ]
            }],
            "comm": {
                "type": "direct",
                "target": "cortx_setup.commands",
                "method": "run",
                "class": "ResourceShow"
            }
        }
    ]
}
