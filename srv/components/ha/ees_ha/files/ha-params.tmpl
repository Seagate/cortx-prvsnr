{% if 'data0' in grains['ip4_interfaces'] and grains['ip4_interfaces']['data0'] %}
  {%- set data_if = 'data0' -%}
{% else %}
  {%- set data_if = pillar['cluster'][grains['id']]['network']['data_nw']['iface'][1] -%}
{%- endif -%}
interface: {{ data_if }}
{% if salt['cmd.run']('lspci -d"15b3:*"|grep Mellanox') %}
net-type: o2ib
{% else %}
net-type: tcp
{% endif %}
ip1: {{ pillar['cluster']['srvnode-1']['network']['data_nw']['roaming_ip'] }}
ip2: {{ pillar['cluster']['srvnode-2']['network']['data_nw']['roaming_ip'] }}
left-node: srvnode-1
right-node: srvnode-2
{% if "physical" in grains['virtual'] %}
left-volume: {{ pillar['cluster']['srvnode-1']['storage']['metadata_device'][0] }}5
right-volume: {{ pillar['cluster']['srvnode-2']['storage']['metadata_device'][0] }}5
{% else %}
left-volume: {{ pillar['cluster']['srvnode-1']['storage']['metadata_device'][0] }}2
right-volume: {{ pillar['cluster']['srvnode-2']['storage']['metadata_device'][0] }}2
{% endif %}
skip-mkfs: true
